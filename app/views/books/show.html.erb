<% if flash[:notice] %>
<div class="container-fluid">
<p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
<% end %>
<style>
.show_label{
	width: 100px;
}
</style>


<h1>Show Book</h1>
<table class='short table'>
	<tr>
	  <td class="show_label"<strong>Title:</strong></td>
	  <td class="show_label"><%= @book.title %></td>
	</tr>

	<tr>
	  <td class="show_label"><strong>Isbn:</strong></td>
	  <td class="show_label"><%= @book.isbn %></td>
	</tr>

	<tr>
	  <td class="show_label"><strong>Description:</strong></td>
	  <td class="show_label"><div class="book_desc"><%= @book.description %></div></td>
	</tr>

	<tr>
	  <td class="show_label"><strong>Author:</strong></td>
	  <td class="show_label"><%= @book.author %></td>
	</tr>
</table>
<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-primary" %>
<%= link_to '&#8592; Back'.html_safe, books_path, class: "btn btn-primary" %>

</div>
