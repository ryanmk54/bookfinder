<% if flash[:notice] %>
<p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
<% end %>

<div class="container-fluid">
<h1>Listing Books</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class='table-striped'>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
				<td><div class="book_desc"><%= book.description %></div></td>
        <td><%= book.author %></td>
        <td class="btn-cell"><%= link_to 'Show', book, class: "btn btn-primary" %></td>
        <td class="btn-cell"><%= link_to 'Edit', edit_book_path(book), class: "btn btn-primary" %></td>
        <td class="btn-cell"><%= link_to 'Destroy', book, class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to 'New Book', new_book_path, class: "btn btn-primary" %>
</div>

<br>


